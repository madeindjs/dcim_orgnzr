{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Configuration",
  "description": "Configuration for dcim-orgzr",
  "type": "object",
  "properties": {
    "version": {
      "description": "The version of this configuration file",
      "type": "integer"
    },
    "rules": {
      "description": "Array of rules",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "destination": {
            "type": "string"
          },
          "property": {
            "type": "string",
            "enum": ["exif.CreateDate"]
          }
        },
        "required": ["destination", "property"]
      }
    }
  },
  "required": ["version", "rules"]
}
